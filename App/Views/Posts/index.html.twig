{% extends 'base.html.twig' %}

{% block title %}Discussion Board{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title text-center display-4 font-weight-bolder">Posts</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class="text-primary">
                    <tr><th class="text-center">
                            Title
                        </th>
                        <th class="text-center">
                            Username
                        </th>
                        <th class="text-center">
                            Created At
                        </th>
                    </tr></thead>
                    <tbody>

                    {% for post in posts %}
                        <tr>
                            <td class="text-center">
                                <a href="/posts/view/{{ post.id }}">{{ post.title }}</a>
                            </td>
                            <td class="text-center">
                                {{ post.username }}
                            </td>
                            <td class="text-center">
                                {{ post.created_at }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {{ pagination|raw }}
            </div>
        </div>
