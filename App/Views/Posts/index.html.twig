{#            <input type="hidden" name="isbn" value="{{ isbn }}">#}
{#            <input type="submit" value="New Post" class="btn btn-primary">#}
{#        </form>#}
        <a href="/posts/new/{{ isbn }}" class="btn btn-primary m-4" style="width: 10rem;">New Post</a>
    </div>
{% endblock %}