{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header ">
            <h2 class="card-title">Add Chapter to {{ book.title }}</h2>
        </div>
        <div class="card-body">
            <form method="post" action="/admin/books/update-chapter/{{ book.isbn }}">
                <div class="form-group row">
                    <div class="col-10">
                        <label for="chapterTitle">Title</label>
                        <input type="text" class="form-control" id="chapterTitle" name="title"
                               placeholder="Enter Chapter Title" required value="{{ chapter.title }}">
                    </div>
                    <div class="col-2">
                        <label for="chapterNumber">Chapter Number</label>
                        <input type="number" class="form-control" id="chapterNumber" name="chapter-number"
                               placeholder="Enter Chapter Number" min="1" required value="{{ chapter.chapter }}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="chapterVideo">Video URL</label>
                    <input type="text" class="form-control" id="chapterVideo" name="chapter-video"
                           placeholder="Enter Youtube URL only" value="{{ chapter.video_url }}">
                </div>
                <div class="form-group">
                    <label for="summernote">Content</label>
                    <textarea id="summernote" name="editordata">{{ chapter.content|raw }}</textarea>
                </div>
                <div class="form-group">
                    <input type="hidden" name="isbn" value="{{ book.isbn }}">
                    <input type="submit" value="Update Chapter" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
{% endblock %}