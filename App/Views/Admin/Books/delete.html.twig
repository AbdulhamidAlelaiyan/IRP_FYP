{% extends 'Admin/base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header ">
            <h4 class="card-title">Delete Book {{ book.isbn }}</h4>
        </div>
        <div class="card-body ">
            <p class="text-danger lead">
                Are you sure you want to delete: <br>
                <span class="font-weight-bold">{{ book.title }}</span>
            </p>
        </div>
        <div class="">
            <form action="/admin/books/destroy" method="post">
                <input type="hidden" name="isbn" value="{{ book.isbn }}">
                <input type="submit" value="DELETE!" class="btn btn-danger ml-3">
            </form>
        </div>
    </div>

{% endblock %}