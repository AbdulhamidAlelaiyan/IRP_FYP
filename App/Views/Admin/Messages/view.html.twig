{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header ">
            <h4 class="card-title">{{ message.title }}</h4>
            <span class="font-weight-bold">Sent by: {{ message.from_username }} to: {{ message.to_username }}</span>
        </div>
        <div class="card-body ">
            <p class="text-danger lead">
            {{ message.body }}
            </p>
        </div>
    </div>

{% endblock %}