<body class="register-page sidebar-collapse">
<!-- Navbar -->
<nav class="navbar navbar-expand-lg fixed-top navbar-transparent " color-on-scroll="300">
    <div class="container">
        <div class="navbar-translate">
            <a class="navbar-brand" href="/" rel="tooltip" title="Coded by Creative Tim" data-placement="bottom">
                IRP
            </a>
            <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/" class="nav-link"><i class=""></i>Home</a>
                </li>
                {% if current_user %}#}
                    <li class="nav-item">
                        <a class="nav-link" href="/profile/show">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signup/new">Sign up</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->
<div class="page-header" style="background-image: url('/assets/img/login-image.jpg');">
    <div class="filter"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 ml-auto mr-auto">
                <div class="card card-register" style="background-color: rgba(245,222,179,0.5)">
                    <h3 class="title mx-auto text-dark font-weight-bolder">Login</h3>
                    <form class="register-form" method="post" action="/login/create">
                        <label class="text-dark">Email</label>
                        <input type="email" class="form-control" placeholder="Enter Email" name="email" required value="{{ email }}">
                        <label class="text-dark">Password</label>
                        <input type="password" class="form-control" placeholder="Enter Password" name="password" required>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="remember_me" {% if remember_me %} checked="checked"{% endif %}>
                                Remember Me
                                <span class="form-check-sign"></span>
                            </label>
                        </div>
                        <button class="btn btn-danger btn-block btn-round">Login</button>
                        <a href="/password/forgot" class="btn mx-auto d-block">Forget Password?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="footer register-footer text-center">
        <h6>Â©
            <script>
                document.write(new Date().getFullYear())
            </script>, made by Abdulhamid Alelaiyan</h6>
    </div>
</div>
